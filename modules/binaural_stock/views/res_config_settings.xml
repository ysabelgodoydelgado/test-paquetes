<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_maxcam_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.maxcam</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='product_setting_container'][2]" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="div_overdraw_inventory">
                        <div class="o_setting_left_pane">
                            <field name="overdraw_inventory"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="overdraw_inventory"/>
                            <div class="text-muted">
                                Don t overdraw inventory when selling products
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>

    </data>
</odoo>
